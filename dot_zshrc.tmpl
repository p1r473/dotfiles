# Define fallback shell-compatible pathmerge (only if needed)
pathmerge_legacy() 
{
  local IFS=':'
  local input_path="${1:-$PATH}"
  local -A seen
  local out_path=""
  for p in ${(s/:/)input_path}; do
    [[ -n "$p" && -z "${seen[$p]}" ]] && out_path+="${p}:"
    seen[$p]=1
  done
  echo "${out_path%:}"
}

